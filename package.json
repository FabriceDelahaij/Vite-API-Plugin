{
  "name": "vite-api-routes-plugin",
  "version": "1.0.0",
  "type": "module",
  "description": "Next.js-style API routes for Vite with comprehensive security features",
  "keywords": [
    "vite",
    "api",
    "routes",
    "security",
    "cors",
    "authentication",
    "jwt"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:https": "node scripts/generate-ssl-cert.js && vite --config vite.config.https.js",
    "dev:secure": "vite --config vite.config.secure.js",
    "build": "tsc && vite build",
    "build:prod": "tsc && vite build --config vite.config.production.js",
    "preview": "vite preview",
    "generate-cert": "node scripts/generate-ssl-cert.js",
    "generate-secrets": "node scripts/generate-secrets.js",
    "validate-env": "node scripts/validate-env.js",
    "check-deps": "node scripts/check-dependencies.js",
    "update-deps": "node scripts/update-dependencies.js",
    "deploy-demo": "node scripts/deploy-demo.js",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest --run"
  },
  "bin": {
    "vite-api-routes": "./bin/vite-api-routes.js"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/ui": "^4.0.18",
    "typescript": "^5.0.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "@sentry/node": "^10.38.0",
    "chalk": "^5.0.0",
    "commander": "^14.0.3",
    "inquirer": "^13.2.2"
  }
}
