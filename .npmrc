# npm configuration

# Save exact versions by default
save-exact=false

# Use ^ for dependencies (allow minor/patch updates)
save-prefix=^

# Audit level (info, low, moderate, high, critical)
audit-level=moderate

# Automatically fix vulnerabilities on install
# audit-fix=true

# Fund messages
fund=true

# Update notifier
update-notifier=true

# Engine strict (enforce Node.js version)
engine-strict=false

# Legacy peer deps (for compatibility)
legacy-peer-deps=false

# Progress indicator
progress=true

# Loglevel (silent, error, warn, notice, http, timing, info, verbose, silly)
loglevel=notice
